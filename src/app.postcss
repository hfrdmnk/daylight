/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	body {
		@apply bg-white text-gray-800 dark:text-gray-200 antialiased;
	}

	h1,
	.h1,
	h2,
	.h2,
	h3,
	.h3,
	h4,
	.h4,
	h5,
	.h5,
	h6,
	.h6 {
		@apply font-bold text-gray-950 dark:text-gray-50;
	}
}

@layer utilities {
	*::selection {
		@apply bg-emerald-400 text-emerald-50;
	}
}
